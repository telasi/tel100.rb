<div class="page-header">
  <h1><%= @title %> (<code><%= number_with_delimiter @employees.count %></code>)</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th width="50">თანამშრ.#</th>
      <th>სახელი, გვარი, თანამდებობა</th>
      <th class="text-center" width="50"><i class="fa fa-cog"></i></th>
    </tr>
  </thead>
<% if @employees.any? %>
  <% @employees.each do |employee| %>
    <tr>
      <td><code><%= employee.person_number %></code></td>
      <td>
        <%= employee.full_name %> &mdash;
        <span class="text-muted">
          <%= employee.organization.name %>
          <span class="js-orgstructure"
                data-toggle="popover"
                data-content="<%= employee_org_chain(employee) %>"
                title="<strong><%= employee.full_name %></strong>"
                data-container="body" data-trigger="hover">
            <i class="fa fa-ellipsis-h"></i>
          </span>
        </span>
      </td>
      <td>?</td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td colspan="3" class="no-data">
      არც ერთი თანამშრომელი
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @employees, renderer: BootstrapPagination::Rails %>
<script type="text/javascript">
$(function() { $('.js-orgstructure').popover({html: true, animation: true, placement: 'bottom'}); });
</script>