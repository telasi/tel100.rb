<div class="page-header">
  <h1><%= @title %> (<code><%= @users.count %></code>)</h1>
</div>

<%
  empty_text = @users.total_entries == 0 ?
    'არც ერთი მომხმარებელი არაა რეგისტრირებული!' :
    "თქვენ იმყოფებით <strong>არარსებულ გვერდზე</strong>! გადადით #{link_to 'პირველ გვერდზე', admin_users_url(page: 1)}."
%>

<%= table_for @users, model_name: 'Sys::User', empty_text: empty_text do |t|
  t.text_field 'username', tag: 'code'
  t.text_field 'full_name', url: ->(x){ admin_user_url(id: x.id) }, icon: ->(x){ x.admin? ? 'cogs' : nil }
  t.text_field 'mobile'
  t.text_field 'email'
end %>

<%= paginate @users, keyboardNavigation: true %>