<div class="logo logo-large" style="margin-bottom: 32px;">
  <a href="/">
    <i class="fa fa-send-o"></i>
    <span>tel100</span>
  </a>
</div>

<%= form_tag request.url, class: 'form-vertical', autocomplete: 'on' do %>
  <% if @error %>
    <div class="alert alert-danger"><%= @error %></div>
  <% end %>
  <div>
    <%= text_field_tag 'userid', params[:userid], class: 'form-control', autofocus: true, placeholder: 'მომხმარებელი' %>
    <%= password_field_tag 'password', params[:password], class: 'form-control', placeholder: 'პაროლი' %>
  </div>
  <div>
    <button type="submit">შესვლა</button>
  </div>
<% end %>